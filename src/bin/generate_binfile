#!/opt/local/bin/zsh
source "/Users/unforswearing/zsh-config/bin/stdlib.zsh"
generate_binfile () {
	unsetopt no_append_create
	unsetopt no_clobber
	local bindir="/Users/unforswearing/zsh-config/src/bin" 
	path+="$bindir" 
	local functionname="${1}" 
	local functionbody=$(declare -f $functionname) 
	local binfile="${bindir}/${functionname}" 
	local argitems=("\"" "$" "@" "\"") 
	puts "#!/opt/local/bin/zsh" > "$binfile"
	{
		puts "source "${stdlib}""
		puts "$functionbody"
		puts "$functionname "$(puts $argitems | sd " " "")""
	} >> "$binfile"
	chmod +x "$binfile"
	setopt no_append_create
	setopt no_clobber
}
generate_binfile "$@"
